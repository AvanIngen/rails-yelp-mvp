<h1>Add a restaurant</h1>

<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.select :category, Restaurant::PERMITTED_CATEGORIES %>
  <br>
  <%= f.submit class: "btn btn-primary" %>
<% end %>

